                    "×ª×¨×¡×™×¡ ×©××Ÿ",
                    "1 ×’×‘×™×¢ ×™×•×’×•×¨×˜ ×¤×¨×• (×œ×”×’×©×”)",
                    "2 ×›×¤×•×ª ×¤×™×¨×•×ª ×™×¢×¨ (×œ×”×’×©×”)"
                ],
                steps: [
                    "×¢×¨×‘×‘×• ××ª ××¨×›×™×‘×™ ×”×‘×œ×™×œ×” (×œ×œ× ×™×•×’×•×¨×˜ ×•×¤×™×¨×•×ª). ×§×¨×¨×• ×œ-30 ×“×§×•×ª.",
                    "×¦×§×• ×œ××—×‘×ª ×—××” ×•××©×•×× ×ª, ×›×¡×• ×•×‘×©×œ×• ×¢×œ ××© × ××•×›×”.",
                    "×”×¤×›×• ×›×©×”×¤× ×§×™×™×§ × ×¤×¨×“ ×‘×§×œ×•×ª ×•×”×©×—×™××• ×¦×“ ×©× ×™.",
                    "×”×’×™×©×• 2 ×™×—×™×“×•×ª ×¢× ×™×•×’×•×¨×˜ ×•×¤×™×¨×•×ª ×™×¢×¨."
                ]
            }
        ];

        // --- Application State ---
        let currentFilter = 'all';
        let currentRecipe = null;
        let activeStep = 0;
        let charts = {}; // Store chart instances

        // --- Initialization ---
        document.addEventListener('DOMContentLoaded', () => {
            renderGallery();
            initDashboardCharts();
        });

        function scrollToSection(id) {
            document.getElementById(id).scrollIntoView({ behavior: 'smooth' });
        }

        // --- Dashboard Logic ---
        function initDashboardCharts() {
            // Calories Comparison Bar Chart
            const ctxCal = document.getElementById('caloriesChart').getContext('2d');
            
            if (charts.calories) {
                charts.calories.destroy();
            }

            charts.calories = new Chart(ctxCal, {
                type: 'bar',
                data: {
                    labels: recipes.map(r => r.title),
                    datasets: [{
                        label: '×§×œ×•×¨×™×•×ª ×œ×× ×”',
                        data: recipes.map(r => r.calories),
                        backgroundColor: 'rgba(255, 159, 64, 0.7)',
                        borderColor: 'rgba(255, 159, 64, 1)',
                        borderWidth: 1,
                        borderRadius: 6
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    indexAxis: 'y',
                    plugins: { 
                        legend: { display: false },
                        tooltip: {rtl: true}
                    },
                    scales: { 
                        x: { beginAtZero: true },
                        y: { ticks: { mirror: true, padding: 10 } }
                    }
                }
            });

            // Protein Leaderboard
            const sortedByProtein = [...recipes].sort((a, b) => b.protein - a.protein);
            const ctxProt = document.getElementById('proteinChart').getContext('2d');

            if (charts.protein) {
                charts.protein.destroy();
            }

            charts.protein = new Chart(ctxProt, {
                type: 'bar',
                data: {
                    labels: sortedByProtein.map(r => r.title),
                    datasets: [{
                        label: '×—×œ×‘×•×Ÿ (×’×¨×)',
                        data: sortedByProtein.map(r => r.protein),
                        backgroundColor: 'rgba(54, 162, 235, 0.7)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1,
                        borderRadius: 6
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    indexAxis: 'y',
                    plugins: { 
                        legend: { display: false },
                        tooltip: {rtl: true}
                    },
                    scales: { 
                        x: { beginAtZero: true },
                        y: { ticks: { mirror: true, padding: 10 } }
                    }
                }
            });
        }

        // --- Gallery Logic ---
        function filterRecipes(filter) {
            currentFilter = filter;
            
            // Update buttons
            document.querySelectorAll('.filter-btn').forEach(btn => {
                if(btn.dataset.filter === filter) {
                    btn.classList.remove('bg-stone-100', 'text-gray-600', 'hover:bg-stone-200');
                    btn.classList.add('bg-gray-800', 'text-white');
                } else {
                    btn.classList.add('bg-stone-100', 'text-gray-600', 'hover:bg-stone-200');
                    btn.classList.remove('bg-gray-800', 'text-white');
                }
            });

            renderGallery();
        }

        function renderGallery() {
            const grid = document.getElementById('recipeGrid');
            grid.innerHTML = '';

            const filtered = recipes.filter(r => {
                if (currentFilter === 'all') return true;
                if (currentFilter === 'high_protein' && r.protein > 10) return true;
                if (currentFilter === 'salty' && (r.category === 'salty' || r.category === 'high_protein')) return true;
                if (currentFilter === 'sweet' && r.category === 'sweet') return true;
                return false;
            });

            filtered.forEach(r => {
                const card = document.createElement('div');
                card.className = "bg-white rounded-xl overflow-hidden shadow-lg border border-stone-100 card-hover cursor-pointer flex flex-col h-full";
                card.onclick = () => openModal(r.id);

                card.innerHTML = `
                    <div class="h-32 bg-stone-100 flex items-center justify-center text-6xl">
                        ${r.icon}
                    </div>
                    <div class="p-5 flex-grow flex flex-col">
                        <div class="flex justify-between items-start mb-2">
                            <h3 class="font-bold text-xl text-gray-800 leading-tight">${r.title}</h3>
                            <span class="bg-gray-200 text-gray-700 text-sm px-3 py-1 rounded-full whitespace-nowrap">${r.time} ×“×§'</span>
                        </div>
                        <p class="text-gray-500 text-sm mb-4 line-clamp-2 flex-grow">${r.desc}</p>
                        <div class="mt-auto flex justify-between items-center text-base font-medium pt-4 border-t border-stone-100">
                            <span class="text-orange-600 flex items-center gap-1">ğŸ”¥ ${Math.round(r.calories)} ×§×œ'</span>
                            <span class="text-blue-600 flex items-center gap-1">ğŸ’ª ${r.protein}×’' ×—×œ×‘×•×Ÿ</span>
                        </div>
                    </div>
                `;
                grid.appendChild(card);
            });
        }

        // --- Modal Logic ---
        function openModal(id) {
            currentRecipe = recipes.find(r => r.id === id);
            if (!currentRecipe) return;

            // Populate Text
            document.getElementById('modalTitle').innerText = currentRecipe.title;
            document.getElementById('modalIcon').innerText = currentRecipe.icon;
            document.getElementById('modalMeta').innerHTML = `<span>â³ ${currentRecipe.time} ×“×§×•×ª</span> | <span>ğŸ½ï¸ ${currentRecipe.servings} ×× ×•×ª</span> | <span>ğŸ”¥ ${Math.round(currentRecipe.calories)} ×§×œ×•×¨×™×•×ª</span>`;
            document.getElementById('macroProtein').innerText = currentRecipe.protein + '×’\'';
            document.getElementById('macroCarbs').innerText = currentRecipe.carbs + '×’\'';
            document.getElementById('macroFat').innerText = currentRecipe.fat + '×’\'';

            // Populate Ingredients
            const ingList = document.getElementById('modalIngredients');
            ingList.innerHTML = '';
            currentRecipe.ingredients.forEach((ing, i) => {
                const li = document.createElement('li');
                li.className = "flex items-start gap-2 group cursor-pointer hover:bg-stone-50 p-2 rounded-lg transition";
                li.onclick = function() { 
                    const checkbox = this.querySelector('input');
                    checkbox.checked = !checkbox.checked;
                };
                li.innerHTML = `
                    <input type="checkbox" class="mt-1 accent-green-600 cursor-pointer w-4 h-4">
                    <span class="group-hover:text-gray-900 transition-colors flex-grow">${ing}</span>
                `;
                ingList.appendChild(li);
            });

            // Initialize Cook Mode
            activeStep = 0;
            renderSteps();

            // Render Macro Chart
            // Use setTimeout to ensure the canvas element is fully rendered in the DOM before Chart.js tries to draw on it
            setTimeout(renderMacroChart, 50); 

            // Show Modal
            const modal = document.getElementById('recipeModal');
            modal.classList.remove('hidden');
            setTimeout(() => {
                document.getElementById('modalContent').classList.remove('scale-95');
                document.getElementById('modalContent').classList.add('scale-100');
            }, 10);
            document.body.style.overflow = 'hidden';
        }

        function closeModal() {
            const modal = document.getElementById('recipeModal');
            document.getElementById('modalContent').classList.remove('scale-100');
            document.getElementById('modalContent').classList.add('scale-95');
            setTimeout(() => {
                modal.classList.add('hidden');
                document.body.style.overflow = 'auto';
            }, 300);
        }

        // --- Cook Mode Logic ---
        function renderSteps() {
            const container = document.getElementById('modalSteps');
            container.innerHTML = '';
            
            currentRecipe.steps.forEach((step, index) => {
                const div = document.createElement('div');
                div.className = `p-5 rounded-xl border transition-all duration-300 shadow-sm ${index === activeStep ? 'border-green-400 bg-green-50 step-active shadow-md' : 'border-stone-100 bg-white opacity-75 hover:opacity-100'}`;
                
                div.innerHTML = `
                    <div class="flex gap-4">
                        <span class="flex-shrink-0 w-10 h-10 rounded-full flex items-center justify-center text-lg font-bold ${index === activeStep ? 'bg-green-600 text-white' : 'bg-gray-200 text-gray-600'}">
                            ${index + 1}
                        </span>
                        <p class="text-gray-700 text-base leading-relaxed">${step}</p>
                    </div>
                `;
                container.appendChild(div);
            });

            // Update Controls
            document.getElementById('stepIndicator').innerText = `${activeStep + 1}/${currentRecipe.steps.length}`;
            document.getElementById('btnPrev').disabled = activeStep === 0;
            document.getElementById('btnNext').disabled = activeStep === currentRecipe.steps.length - 1;
            
            // Auto scroll to active step
            const activeEl = container.children[activeStep];
            if(activeEl) {
                activeEl.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
            }
        }

        function nextStep() {
            if (activeStep < currentRecipe.steps.length - 1) {
                activeStep++;
                renderSteps();
            }
        }

        function prevStep() {
            if (activeStep > 0) {
                activeStep--;
                renderSteps();
            }
        }

        // --- Detailed Chart Logic ---
        function renderMacroChart() {
            const ctx = document.getElementById('macroChart').getContext('2d');
            
            if (charts.macro) {
                charts.macro.destroy();
            }

            charts.macro = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['×—×œ×‘×•×Ÿ', '×¤×—××™××•×ª', '×©×•××Ÿ'],
                    datasets: [{
                        data: [currentRecipe.protein, currentRecipe.carbs, currentRecipe.fat],
                        backgroundColor: [
                            'rgba(54, 162, 235, 0.8)', // Protein - Blue
                            'rgba(255, 206, 86, 0.8)', // Carbs - Yellow
                            'rgba(255, 99, 132, 0.8)'  // Fat - Red
                        ],
                        borderWidth: 0,
                        hoverOffset: 8
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            rtl: true,
                            callbacks: {
                                label: function(context) {
                                    return ` ${context.label}: ${context.raw} ×’×¨×`;
                                }
                            }
                        }
                    },
                    cutout: '70%'
                }
            });
        }

        // Close modal on outside click
        document.getElementById('recipeModal').addEventListener('click', (e) => {
            if (e.target.id === 'recipeModal') closeModal();
        });

    </script>
</body>
</html>
