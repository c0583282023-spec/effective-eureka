            },
            {
                id: 6,
                title: "×¤× ×§×™×™×§ 60 ×§×œ×•×¨×™×•×ª",
                category: "sweet",
                time: 30,
                servings: 5,
                calories: 191, // Note: Recipe booklet says 191 for 2 units serving
                protein: 6.8,
                carbs: 25.8,
                fat: 0,
                icon: "ğŸ«",
                desc: "×¤× ×§×™×™×§ ××•×•×¨×™×¨×™ ×•×§×œ, ×‘×¡×™×¡ ××¢×•×œ×” ×œ×ª×•×¡×¤×•×ª ×¤×¨×™ ×•×™×•×’×•×¨×˜.",
                ingredients: [
                    "1 ×‘×™×¦×”",
                    "1 ×›×•×¡ ×—×œ×‘",
